{
  "manifest_version": 3,
  "name": "Subtitles On Top",
  "version": "1.2",
  "description": "Moves subtitles to the top of the screen on supported streaming sites. Includes a toggle to turn on/off.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_icon": "icons/icon-removebg-preview.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icons/icon-removebg-preview.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.netflix.com/*"],
      "js": ["content_netflix.js"],
      "css": ["netflix_style.css"]
    },
    {
      "matches": ["*://*.viki.com/videos/*"],
      "js": ["content_viki.js"],
      "css": ["viki_style.css"]
    }
  ]
}